-#  This file is app/views/receipts/index.html.haml
%h1 All Receipts

%table#receipts
  %thead
    %tr
      //%th Purchase Date
      %th{:class => @date_header}= link_to 'Purchase Date', receipts_path(:sort => 'date'), :id => 'purchase_date_header'
      //%th Cost
      %th{:class => @cost_header}= link_to 'Cost', receipts_path(:sort => 'cost'), :id => 'cost_header'
      %th Store
      %th Payment Type
      %th More Information
  %tbody
    - @receipts.each do |receipt|
      %tr
        %td= receipt.date.strftime("Purchase made on %B %-d, %Y at %l:%M.%S %P")
        %td= "$%.2f" % receipt.cost
        %td{:class => @store_header}= link_to receipt.store, receipts_path(:sort => 'store', :sto => receipt.store), :id => 'store_header'
        %td= if (receipt.payment == "Cash" || receipt.payment == "cash") then "Cash" else "xxxx-xxxx-xxxx-#{receipt.payment}" end
        %td= link_to "More about #{receipt.title}", receipt_path(receipt)

&nbsp
= link_to 'All Receipts', receipts_path(:sort => 'date', :id => 'purchase_date_header')
&nbsp
= link_to 'Add new receipt', new_receipt_path
